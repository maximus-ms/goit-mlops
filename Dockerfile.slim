FROM python:3.9-slim AS builder

RUN mkdir -p /app
WORKDIR /app

# Install system dependencies needed for some Python packages
RUN apt-get update && apt-get install -y --no-install-recommends libglib2.0-0 libsm6 libxrender1 libxext6 && apt-get clean && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir --target=/python-deps -r requirements.txt

# ===== STAGE 2: Final runtime image =====
FROM python:3.9-slim

RUN mkdir -p /data
WORKDIR /app

# Copy only necessary dependencies from the builder stage
COPY --from=builder /python-deps /usr/local/lib/python3.9/site-packages/

COPY traced_model.pt .
COPY inference.py .

ENTRYPOINT ["python", "inference.py"]
